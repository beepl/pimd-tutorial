<simulation verbosity="medium">
   <ffsocket mode='unix' name="cp2k-ch5" pbc="false">
      <latency>  1.00000000e-02</latency> <address>cp2k-ch5</address>
   </ffsocket>
   <total_steps>400000</total_steps>
   <output prefix="pile">
      <properties stride="10" filename="out"> [ step, time{femtosecond}, conserved, temperature, kinetic_cv, 
            potential, kinetic_cv(H), kinetic_cv(C) ] </properties>
   </output>
   <prng>
      <seed>18885</seed>
   </prng>
   <system>
   <initialize nbeads="128">
    <file mode="chk">start.chk</file>
    <cell mode="abc"> [   25., 25.0, 25.0 ]  </cell>
    <velocities mode="thermal" units='kelvin'> 100 </velocities>
   </initialize>
   <forces> <force forcefield="cp2k-ch5"> </force>   </forces>
  <motion mode='dynamics'>
   <dynamics mode='nvt'>
  <timestep units="femtosecond"> 0.25 </timestep>
  <thermostat mode='pile_l'> <tau units="femtosecond"> 100 </tau>
  </thermostat>
  </dynamics>
  </motion>
  <ensemble>
    <temperature units='kelvin'> 100.0 </temperature>
   </ensemble>
   </system>
</simulation>
